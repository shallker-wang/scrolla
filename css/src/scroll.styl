.component.scroll
  position relative
  padding-right 10px
  overflow hidden

  >.content
    width 100%
    height 100%
    overflow hidden

  >.scrollbar
    top 0
    right 0
    position absolute
    z-index 999

    &.vertical
      width 10px
      height 100%

    &.horizontal
      width 100%
      height 10px

    >.track
      width 100%
      height 100%
      background-color #DDD

      >.thumb
        z-index 9999
        position absolute
        top 0
        left 0
        background-color gray
        width 100%
        height 100%
        cursor move

      >.button
        &.top
          place holder
  
        &.left
          place holder
  
        &.right
          place holder
  
        &.bottom
          place holder
