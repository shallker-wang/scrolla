.component.scroll
  overflow hidden

  +.scrollbar, +.scrollbar+.scrollbar
    position absolute
    z-index 999

    &.vertical
      width 10px

      // &.left
      //   &.inside
      //     left 0

      //   &.outside
      //     right 100%

      // &.right
      //   &.inside
      //     right 0

      //   &.outside
      //     left 100%

    &.horizontal
      height 10px

    >.track
      width 100%
      height 100%
      background-color #DDD

      >.thumb
        z-index 9999
        position absolute
        top 0
        left 0
        background-color gray
        width 100%
        height 100%
        cursor move

      >.button
        &.top
          place holder
  
        &.left
          place holder
  
        &.right
          place holder
  
        &.bottom
          place holder
